<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="inserirtexto">
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/inserirtexto</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="inserirEmail">
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/inserirtexto</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:hint">@string/email</item>
        <item name="android:inputType">textEmailAddress|textAutoCorrect|textAutoComplete</item>
    </style>

    <style name="inserirSenha">
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/inserirtexto</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:hint">@string/senha</item>
        <item name="android:imeActionLabel">@string/acaoEntrarCurta</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="layoutTelasInserir">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">36dp</item>
        <item name="android:layout_marginRight">36dp</item>
    </style>

    <style name="botao">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:enabled">true</item>
        <item name="android:background">@drawable/botao</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:onClick">OnClick</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/cabin_bold</item>
    </style>

    <style name="titulo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/verdedestaque</item>
        <item name="android:fontFamily">@font/cabin_bold</item>
    </style>

    <style name="titulosipinners">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/cabin_semibold</item>

    </style>

    <style name="spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@drawable/spinner</item>
        <item name="android:gravity">center</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:foreground">@drawable/spinnerdrop</item>
        <item name="android:foregroundGravity">center|right</item>
    </style>

    <style name="metadetela">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>


    </style>

    <style name="FullscreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>
    <style name="temaAluno" parent="AppTheme">
        <item name="android:colorPrimary">#11AC9D</item>
        <item name="android:colorPrimaryDark">#0f9a8d</item>
        <item name="android:colorAccent">#137bc0</item>
    </style>
    <style name="titulo_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:textColor">@color/verdedestaque</item>
        <item name="android:fontFamily">@font/cabin_bold</item>
    </style>

</resources>
