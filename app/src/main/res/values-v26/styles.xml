<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="inserirtexto">
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/inserirtexto</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:importantForAutofill">no</item>
    </style>

    <style name="inserirEmail">
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/inserirtexto</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:hint">@string/email</item>
        <item name="android:inputType">textEmailAddress|textAutoCorrect|textAutoComplete</item>
        <item name="android:textSize">16sp</item>
        <item name="android:importantForAutofill">no</item>
    </style>

    <style name="inserirSenha">
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/inserirtexto</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:hint">@string/senha</item>
        <item name="android:imeActionLabel">@string/acaoEntrarCurta</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:textSize">16sp</item>
        <item name="android:importantForAutofill">no</item>
    </style>
</resources>