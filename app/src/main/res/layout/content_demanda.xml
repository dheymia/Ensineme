<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".DemandaActivity"
    tools:showIn="@layout/activity_demanda">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            style="@style/layoutTelasInserir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                style="@style/titulo"
                android:layout_width="match_parent"
                android:text="@string/desejaaprender" />


            <EditText
                android:id="@+id/txtDescricaoDemanda"
                style="@style/inserirtexto"

                android:hint="@string/descricaodemanda"
                android:inputType="textMultiLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView

                        android:id="@+id/textView2"
                        style="@style/titulosipinners"
                        android:text="@string/categoria" />

                    <Spinner
                        android:id="@+id/spinner2"
                        style="@style/spinner"
                        android:layout_marginRight="1dp"
                        android:entries="@array/categoriaDemanda" />

                    <TextView
                        android:id="@+id/textView6"
                        style="@style/titulosipinners"
                        android:text="@string/inicioDemanda" />

                    <EditText
                        android:id="@+id/txtInicioDemanda"
                        style="@style/inserirtexto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="1dp"
                        android:hint="@string/data"
                        android:inputType="date"
                        android:onClick="ClickDate" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView5"
                        style="@style/titulosipinners"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/cargahoraria" />

                    <Spinner
                        android:id="@+id/spinner3"
                        style="@style/spinner"
                        android:layout_marginLeft="1dp"
                        android:entries="@array/cargaHorÃ¡ria" />

                    <TextView
                        android:id="@+id/textView7"
                        style="@style/titulosipinners"
                        android:layout_height="wrap_content"
                        android:text="@string/turnoDemanda" />

                    <Spinner
                        android:id="@+id/spinner4"
                        style="@style/spinner"
                        android:layout_marginLeft="1dp"
                        android:entries="@array/turnoDemanda" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/textView8"
                style="@style/titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <Button
                android:id="@+id/btnCadastrarDemanda"
                style="@style/botao"
                android:text="@string/acaoCadastrar" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>