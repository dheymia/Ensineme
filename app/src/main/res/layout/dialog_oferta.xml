<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RecuperaSenhaActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout style="@style/layoutTelasInserir">

            <LinearLayout
                android:id="@+id/LinDemanda"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="24dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/background_listas">


                <TextView
                    android:id="@+id/txtRotulo"
                    style="@style/titulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Proposta de Ensino"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtRotulo1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Para quem você vai ensinar?"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtAluno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nome do Aluno"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/txtRotul2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="O que você vai ensinar?"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtDemanda"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/descricaodemanda"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/txtRotul3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quando o início está programado?"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtInicio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/inicioDemanda"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/txtRotul4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quer saber mais detalhes?"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email do aluno"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/textRotul5"
                    style="@style/titulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quero fazer uma proposta"
                    android:textSize="18sp" />
            </LinearLayout>

            <Button
                android:id="@+id/btnCadastrarOferta"
                style="@style/botao"
                android:text="@string/acaoCadastrar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtValorOferta" />


            <EditText
                android:id="@+id/txtComentarioOferta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine" />

            <EditText
                android:id="@+id/txtValorOferta"
                style="@style/inserirtexto"

                android:hint="@string/valor"
                android:inputType="numberDecimal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/LinDemanda" />

            <ProgressBar
                android:id="@+id/loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="8dp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/txtValorOferta"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</LinearLayout>