<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginStart="36dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="36dp"
    android:layout_marginBottom="16dp"
    android:gravity="center_horizontal"
    tools:context=".AlunoMainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            style="@style/layoutTelasInserir"
            android:layout_width="match_parent"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp">

            <LinearLayout
                android:id="@+id/LinDemanda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtNomeAluno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/cabin_bold"
                        android:text="Nome do aluno"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/txtRotulo"
                        style="@style/titulo_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="4dp"
                        android:gravity="center"
                        android:text="Quer aprender"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/txtAluno"
                        style="@style/titulo_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="4dp"
                        android:gravity="center"
                        android:text="@string/descricaodemanda"
                        android:textColor="@color/colorPrimary" />
                </LinearLayout>

                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:background="?android:attr/listDivider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="3">

                        <TextView
                            android:id="@+id/txtRotulo4"
                            style="@style/texto_titulo_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Iniciar aulas:" />

                        <TextView
                            android:id="@+id/txtInicio"
                            style="@style/texto_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="6dp"
                            android:text="@string/inicioDemanda" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right">

                        <TextView
                            android:id="@+id/txtRotulo5"
                            style="@style/texto_titulo_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CH:" />

                        <TextView
                            android:id="@+id/txtCH"
                            style="@style/texto_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cargahoraria"
                            android:textAlignment="viewEnd" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="4">

                        <TextView
                            android:id="@+id/txtRotulo2"
                            style="@style/texto_titulo_item"
                            android:text="Categoria:"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/txtCatDemanda"
                            style="@style/texto_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="6dp"
                            android:text="@string/categoria" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right">

                        <TextView
                            android:id="@+id/txtRotulo3"
                            style="@style/texto_titulo_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Turno:"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtTurno"
                            style="@style/texto_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/turnoDemanda"
                            android:textAlignment="textEnd" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/txtRotulo6"
                    style="@style/titulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:text="Local das aulas"
                    android:textAlignment="center" />

                <View
                    android:id="@+id/divider3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="4dp"
                    android:background="?android:attr/listDivider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtRotulo9"
                        style="@style/texto_titulo_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Logradouro:" />

                    <TextView
                        android:id="@+id/txtLogradouro"
                        style="@style/texto_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/logradouro" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="4">

                        <TextView
                            android:id="@+id/txtRotulo10"
                            style="@style/texto_titulo_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Complemento:" />

                        <TextView
                            android:id="@+id/txtComplemento"
                            style="@style/texto_item"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="6dp"
                            android:text="@string/complemento" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right">

                        <TextView
                            android:id="@+id/txtRotulo11"
                            style="@style/texto_titulo_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nº" />

                        <TextView
                            android:id="@+id/txtNumero"
                            style="@style/texto_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/numero"
                            android:textAlignment="textEnd" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="4">

                        <TextView
                            android:id="@+id/txtRotulo13"
                            style="@style/texto_titulo_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bairro:" />

                        <TextView
                            android:id="@+id/txtBairro"
                            style="@style/texto_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bairro" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right">

                        <TextView
                            android:id="@+id/txtRotulo12"
                            style="@style/texto_titulo_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CEP:" />

                        <TextView
                            android:id="@+id/txtCEP"
                            style="@style/texto_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cep"
                            android:textAlignment="textEnd" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="8">

                        <TextView
                            android:id="@+id/txtRotulo7"
                            style="@style/texto_titulo_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cidade:" />

                        <TextView
                            android:id="@+id/txtCidade"
                            style="@style/texto_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="6dp"
                            android:text="@string/cidade" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right">

                        <TextView
                            android:id="@+id/txtRotulo8"
                            style="@style/texto_titulo_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Estado:" />

                        <TextView
                            android:id="@+id/txtEstado"
                            style="@style/texto_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="@string/estado"
                            android:textAlignment="textEnd" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/txtRotulo14"
                    style="@style/titulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:text="Até quando aceitarei propostas" />

                <View
                    android:id="@+id/divider4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="4dp"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:id="@+id/textExpiracao"
                    style="@style/titulosipinners"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="@string/data"
                    android:textAlignment="center"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center|center_horizontal|left"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/LinDemanda">

                <LinearLayout
                    android:id="@+id/VerPropostas"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/inserirtexto"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtVoltar"
                        style="@style/titulo_item"
                        android:layout_width="66dp"
                        android:layout_marginLeft="0dp"
                        android:foreground="@drawable/voltar"
                        android:foregroundGravity="left|center"
                        android:foregroundTint="@color/verdeescuro"
                        android:gravity="left"
                        android:text="Voltar"
                        android:textAlignment="textEnd" />

                </LinearLayout>
            </LinearLayout>


            <ProgressBar
                android:id="@+id/loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/linearLayout4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.cardview.widget.CardView>